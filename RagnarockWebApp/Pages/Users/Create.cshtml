@page
@model RagnarockWebApp.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Create An Account";
    // Layout = "_Layout";
}

<h1>Create Account</h1>
<hr />
<div class="row text-black">
    <div class="col-md-4 bg-dark bg-opacity-75 rounded-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.Username" class="control-label"></label>
                <input placeholder="Enter username" asp-for="User.Username" class="form-control" />
                <span asp-validation-for="User.Username" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="User.Password" class="control-label"></label>
                <input type="password" placeholder="Enter password" asp-for="User.Password" class="form-control" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="User.Email" class="control-label"></label>
                <input type="email" placeholder="Enter email" asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <br />
        </form>
    </div>
</div>
